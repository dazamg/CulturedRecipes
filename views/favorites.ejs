<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>  
    <h2>My Go to recipes</h2>
    <div class="carousel carousel-slider center" data-indicators="true">
        <div class="carousel-fixed-item center">
          <a class="btn waves-effect white grey-text darken-text-2">button</a>
        </div>
        <div class="carousel-item red white-text" href="#one!">
          <h2>First Panel</h2>
          <p class="white-text">This is your first panel</p>
        </div>
        <div class="carousel-item amber white-text" href="#two!">
          <h2>Second Panel</h2>
          <p class="white-text">This is your second panel</p>
        </div>
        <div class="carousel-item green white-text" href="#three!">
          <h2>Third Panel</h2>
          <p class="white-text">This is your third panel</p>
        </div>
        <div class="carousel-item blue white-text" href="#four!">
          <h2>Fourth Panel</h2>
          <p class="white-text">This is your fourth panel</p>
        </div>
      </div>
    <div>
        <ul class="article-listing">
            <% favorites.forEach(favorites => { %>
                <div class="row">
                    <div class="col s12 m7">
                      <div class="card">
                        <div class="card-image medium">
                            <img src="<%= favorites.img_url %>"width=200>
                          <span class="card-title">From: <%= favorites.source %> </span>
                        </div>
                        <div class="card-content">
                            <p><%= favorites.name %> 
                            </p>
                            
                        </div>
                        <div class="card-action">
                            <a href="<%= favorites.url %>">Get Recipe</a>
                                <!-- // favorite button to add to favorite list -->
                                <form method="POST" action="/favorites/<%= favorites.id %>?_method=DELETE">
                                    <input type="submit" value="Delete">
                                </form>
                                 <!-- // post form to leave a comment from the faves list -->
                                <form method="POST" action="/favorites/<%= favorites.id %>/comment">
                                <div class="stars-outer">
                                    <div class="stars-inner"></div>
                                </div>
                                <div class="form-group">   
                                    <input type="text" class="form-control" id="commentContent" name="content" placeholder="Leave a review" required>     
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                                </form>
                                 
                        </div>
                      </div>
                    </div>
                  </div>
            <% }) %>
    
        </ul> 
    </div>
</body>
</html>